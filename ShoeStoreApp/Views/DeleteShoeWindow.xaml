<Window x:Class="ShoeStoreApp.Views.DeleteShoeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Удалить обувь" Height="500" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource ThemeBrush}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="ShoesDataGrid"
                  ItemsSource="{Binding Shoes}"
                  SelectedItem="{Binding SelectedShoe, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  Grid.Row="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Артикул" Binding="{Binding Article}" Width="100"/>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Группа" Binding="{Binding Group}" Width="80"/>
                <DataGridTextColumn Header="Производитель" Binding="{Binding Manufacturer}" Width="100"/>
                <DataGridTextColumn Header="Размер" Binding="{Binding Size}" Width="60"/>
                <DataGridTextColumn Header="Цвет" Binding="{Binding Color}" Width="80"/>
                <DataGridTextColumn Header="Модель" Binding="{Binding ModelName}" Width="100"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat={}{0:F2} ₽}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,10,0,0">
            <Button Content="Удалить" Command="{Binding DeleteCommand}" Width="100" Margin="0,0,10,0" Padding="5"/>
            <Button Content="Отмена" Command="{Binding CancelCommand}" Width="100" Padding="5"/>
        </StackPanel>
    </Grid>
</Window>