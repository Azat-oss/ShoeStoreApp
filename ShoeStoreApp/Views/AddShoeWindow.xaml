<!-- AddShoeWindow.xaml -->
<Window x:Class="ShoeStoreApp.Views.AddShoeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить обувь" Height="520" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource ThemeBrush}">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Наименование:" Grid.Row="0" Grid.Column="0" Margin="0,5" VerticalAlignment="Center"/>
        <TextBox Text="{Binding NewShoe.Name}" Grid.Row="0" Grid.Column="1" Margin="10,5"/>

        <TextBlock Text="Группа:" Grid.Row="1" Grid.Column="0" Margin="0,5" VerticalAlignment="Center"/>
        <ComboBox ItemsSource="{Binding Groups}" 
                  Text="{Binding NewShoe.Group, UpdateSourceTrigger=PropertyChanged}" 
                  IsEditable="True" Grid.Row="1" Grid.Column="1" Margin="10,5"/>

        <TextBlock Text="Артикул:" Grid.Row="2" Grid.Column="0" Margin="0,5" VerticalAlignment="Center"/>
        <TextBox Text="{Binding NewShoe.Article}" Grid.Row="2" Grid.Column="1" Margin="10,5"/>

        <TextBlock Text="Производитель:" Grid.Row="3" Grid.Column="0" Margin="0,5" VerticalAlignment="Center"/>
        <ComboBox ItemsSource="{Binding Manufacturers}" 
                  Text="{Binding NewShoe.Manufacturer, UpdateSourceTrigger=PropertyChanged}" 
                  IsEditable="True" Grid.Row="3" Grid.Column="1" Margin="10,5"/>

        <TextBlock Text="Размер:" Grid.Row="4" Grid.Column="0" Margin="0,5" VerticalAlignment="Center"/>
        <ComboBox ItemsSource="{Binding Sizes}" 
                  Text="{Binding NewShoe.Size, UpdateSourceTrigger=PropertyChanged}" 
                  IsEditable="True" Grid.Row="4" Grid.Column="1" Margin="10,5"/>

        <TextBlock Text="Цвет:" Grid.Row="5" Grid.Column="0" Margin="0,5" VerticalAlignment="Center"/>
        <ComboBox ItemsSource="{Binding Colors}" 
                  Text="{Binding NewShoe.Color, UpdateSourceTrigger=PropertyChanged}" 
                  IsEditable="True" Grid.Row="5" Grid.Column="1" Margin="10,5"/>

        <TextBlock Text="Материал:" Grid.Row="6" Grid.Column="0" Margin="0,5" VerticalAlignment="Center"/>
        <ComboBox ItemsSource="{Binding Materials}" 
                  Text="{Binding NewShoe.Material, UpdateSourceTrigger=PropertyChanged}" 
                  IsEditable="True" Grid.Row="6" Grid.Column="1" Margin="10,5"/>

        <TextBlock Text="Модель:" Grid.Row="7" Grid.Column="0" Margin="0,5" VerticalAlignment="Center"/>
        <ComboBox ItemsSource="{Binding Models}" 
                  Text="{Binding NewShoe.ModelName, UpdateSourceTrigger=PropertyChanged}" 
                  IsEditable="True" Grid.Row="7" Grid.Column="1" Margin="10,5"/>

        <TextBlock Text="Дата производства:" Grid.Row="8" Grid.Column="0" Margin="0,5" VerticalAlignment="Center"/>
        <DatePicker SelectedDate="{Binding NewShoe.ProductionDate}" Grid.Row="8" Grid.Column="1" Margin="10,5"/>

        <TextBlock Text="Гарантия (мес):" Grid.Row="9" Grid.Column="0" Margin="0,5" VerticalAlignment="Center"/>
        <TextBox Text="{Binding NewShoe.WarrantyMonths}" Grid.Row="9" Grid.Column="1" Margin="10,5"/>

        <TextBlock Text="Цена:" Grid.Row="10" Grid.Column="0" Margin="0,5" VerticalAlignment="Center"/>
        <TextBox Text="{Binding NewShoe.Price}" Grid.Row="10" Grid.Column="1" Margin="10,5"/>

        <StackPanel Orientation="Horizontal" Grid.Row="11" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Сохранить" Command="{Binding SaveCommand}" Width="100" Margin="0,0,10,0" Padding="5"/>
            <Button Content="Отмена" Command="{Binding CancelCommand}" Width="100" Padding="5"/>
        </StackPanel>
    </Grid>
</Window>